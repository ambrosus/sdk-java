<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/zxing_barcode_surface"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:zxing_framing_rect_width="@dimen/viewFinderSize"
        app:zxing_framing_rect_height="@dimen/viewFinderSize"/>

    <com.journeyapps.barcodescanner.ViewfinderView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zxing_viewfinder_view"/>

    <ImageView
        android:layout_width="@dimen/crossHairSize"
        android:layout_height="@dimen/crossHairSize"

        android:layout_gravity="center"

        android:src="@drawable/crosshair"/>

    <TextView android:id="@+id/zxing_status_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|center_horizontal"
              android:background="@color/zxing_transparent"
              android:text="@string/zxing_msg_default_status"
              android:textColor="@color/zxing_status_text"/>
</merge>
